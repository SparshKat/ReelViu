<% include partials/header.ejs%>
 
 <div class="container">
     <div class="jumbotron">
    <h1><span class="glyphicon glyphicon-film" aria-hidden="true"></span> Welcome to ReelViu</h1>
     <p>Because everybody deserve honest reviews</p>
     <form action="/moviesearch" method="POST">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search by Title..." style="width : 346px" name="search">
            <p>
                <button class="btn btn-primary btn-md" type="submit" role="button">Search for any movie</button>
                <!-- <a class="btn btn-primary btn-md" href="/moviesearch" role="button">Search for any movie</a> -->
            </p>
        </div>
     </form>
       
  
     <!--<a href="/new/review" class="btn btn-primary btn-lg ">Click here to add more reviews</a>-->
 </div>
    
 <div class="row" style="display:flex ; flex-wrap : wrap ;">
    <% if(movies){    %>
            <% movies.forEach(function(movies){  %>
                    <%  if(movies.Poster!= 'N/A') {  %>
                        <div class="col-md-3 col-sm-6">
                            <div class="thumbnail">
                               <img src = "<%= movies.Poster %>">
                               <div class="caption">
                                   <h4 style="text-align : center">  <%=movies.Title%> (<%=movies.Year%>) </h4>
                               </div>
                               <a href="https://www.imdb.com/title/<%=movies.imdbID%>" class="btn btn-md btn-primary">Read More</a>  
                           </div>
                        </div>
                    <%  } %>
            <% }); %> 
    <% } else { %> 
        <div class="container" style="text-align: center">
            <h2>Sorry! :( No results were found for the movie</h2>
            <p>Try to search for something else !</p>
        </div> 
    
       
    
    <% }  %>
      
     </div>
  </div>
             

<% include partials/footer.ejs%>

