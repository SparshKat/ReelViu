<% include ../partials/header.ejs%>


<div class="container">
    <div class="row">
        <div class="col-md-9">
            <div class="thumbnail ">
                <img class="img-responsive" src="<%= movie.image %>">
                <div class="caption-full">
                    <h4><a><%= movie.title %></a></h4>   
                    <p> <%= movie.review %> </p>
                    <!--<a class="btn btn-warning" href="/moviebase/<%=movie._id%>/edit">Edit Movie</a>-->
                    <!--<form action= "/moviebase/<%=movie._id%>?_method=DELETE" method="POST" id="delete-form">-->
                    <!--    <button class="btn btn-danger">Delete Movie</button>-->
                    <!--</form>-->
                </div>
            </div>
            
            
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/moviebase/<%= movie._id %>/comments/new">Add a new Comment</a>
                </div>
                <hr>
                <% movie.comments.forEach(function(comment){  %>
                    <div class="row">
                        <div class="col-md-12"> 
                            <strong><%= comment.author.username %></strong>    
                            <div class="pull-right"> 
                                <span>10 Days ago</span>
                            </div>
                            <p> <%=comment.text%> </p>
                              <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>      
                                <a href="/moviebase/<%= movie._id%>/comments/<%= comment._id%>/edit" class="btn btn-xs btn-warning">Edit</a>
                                <form action="/moviebase/<%= movie._id%>/comments/<%= comment._id %>?_method=DELETE" method="POST" id="delete-form">
                                    <input type="Submit" class="btn btn-xs btn-danger" value="Delete">
                                </form>
                                 
                             <%  } %>
                           
                          
                        </div>
                    </div>
                         
                   
                <% }); %>

                        <a href="/moviebase" >Click to go back</a>
            </div>
        </div>
        
        <div class="col-md-3">
            <p class="lead">ReelViu</p>
            <div class="list group">
                <li class="list-group-item active">Task 1</li>
                <li class="list-group-item ">Task 2</li>
                <li class="list-group-item">Task 3</li>
            </div>
        </div>
        
    </div>
</div>





<% include ../partials/footer.ejs%>




