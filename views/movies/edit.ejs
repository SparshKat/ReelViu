<% include ../partials/header.ejs%>


<div class="container" >
    <div class="row">
       <h1 style="text-align : center">Edit <%= movie.title %></h1>
       <div style="margin : 0 auto ;width: 30%">
             <form action="/moviebase/<%= movie._id%>?_method=PUT" method="POST">
                 
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Title" name="movie[title]" value="<%= movie.title%>">
            </div>
            
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Poster URL" name="movie[image]" value="<%= movie.image%>">
            </div>
            
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Year" name="movie[year]" value="<%= movie.year%>">
            </div>
            
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Review" name="movie[review]" value="<%= movie.review%>">
            </div>
            
            <div class="form-group">
                 <button class="btn btn-lg btn-default btn-block">Click here to edit the changes</button>
            </div>
            
           <a href="/moviebase">Go back</a> 
        </form>
       </div>
      
    </div>
    
    

</div>

<% include ../partials/footer.ejs%>