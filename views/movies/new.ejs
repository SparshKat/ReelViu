<% include ../partials/header.ejs%>


<div class="container" >
    <div class="row">
       <h1 style="text-align : center">Create a new movie</h1>
       <div style="margin : 0 auto ;width: 30%">
            <form action="/moviebase" method="POST">
            
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Title" name="title">
            </div>
            
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Image URL" name="image">
            </div>
            
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Year" name="year">
            </div>
            
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Review" name="review">
            </div>
            
            <div class="form-group">
                 <button class="btn btn-lg btn-default btn-block">Click here to add</button>
            </div>
            
           <a href="/moviebase">Go back</a> 
        </form>
       </div>
      
    </div>
    
    

</div>

