<div class="container" >
    <div class="row">
       <h1 style="text-align : center">Edit Comment</h1>
       <div style="margin : 0 auto ;width: 30%">
            <form action= "/moviebase/<%= movie_id%>/comments/<%= comment._id%>?_method=PUT" method="POST">
            
            <div class="form-group">
                <input class="form-control" type="text" value="<%=comment.text%>" name="comment[text]">
            </div>
            
            <div class="form-group">
                 <button class="btn btn-lg btn-default btn-block">Click to Update the changes</button>
            </div>
            
           <a href="/moviebase">Go back</a> 
        </form>
       </div>
      
    </div>
</div>


